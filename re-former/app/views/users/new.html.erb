<%= form_tag("/users", method: "post") do %>
	<%= label_tag(:username, "Your Username") %>
	<%= text_field_tag(:username) %>

	<%= label_tag(:email, "Your Email") %>
	<%= email_field_tag(:email) %>

	<%= label_tag(:password, "Your Password") %>
	<%= password_field_tag(:password) %>

	<%= submit_tag("Submit") %>
<% end %>